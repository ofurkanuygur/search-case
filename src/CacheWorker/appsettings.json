{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "WriteServiceDb": "Host=localhost;Port=5433;Database=searchcase;Username=postgres;Password=postgres",
    "Redis": "localhost:6379"
  },
  "Kafka": {
    "Host": "localhost:9092",
    "Topic": "content-batch-events",
    "ConsumerGroup": "cache-worker-group"
  },
  "Cache": {
    "ExpirationHours": 24
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "MassTransit": "Information",
        "StackExchange.Redis": "Warning"
      }
    }
  }
}